                     Padding="30,0,0,0"
                     Visibility="Visible" Height="22"/>
            <TextBlock x:Name="PlaceholderTextBlock10"
                Text="Introduceți diagnostic"
                Foreground="#FF88D8E9"
                FontSize="13"
                FontFamily="Montserrat"
                FontWeight="Medium"
                VerticalAlignment="Top"
                Margin="348,402,454,0"
                Padding="30,0,0,0"
                Visibility="Visible" Height="22"/>
            <TextBox  
                x:Name="Diagnostic"
                FontSize="13"
                FontFamily="Montserrat"
                FontWeight="Medium"
                Foreground="#FFEDF4F4"
                CaretBrush="#FFE8E5E5"
