                BorderThickness="0,0,0,1"
                Height="26"
                VerticalAlignment="Top"
                Margin="358,398,465,0"
                Padding="30,0,0,0"
                Background="Transparent" Cursor="Hand"
                GotFocus="TextBox_GotFocus10"
                LostFocus="TextBox_LostFocus10"/>

