                        CaretBrush="#FFE8E5E5"
                        BorderBrush="#FFE7F8FF"
                        BorderThickness="0,0,0,1"
                        Height="25"
                        VerticalAlignment="Top"
                        Margin="89,213,732,0"
                        Padding="30,0,0,0"
